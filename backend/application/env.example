# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=insight
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# AWS S3 Configuration
# Region and Bucket are hardcoded in config (us-east-1, insight)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_S3_ENDPOINT=
AWS_S3_USE_SSL=true
AWS_S3_BASE_PATH=uploads

# CDN Configuration (Optional)
CDN_ENABLED=false
CDN_BASE_URL=
CDN_SIGNED_URLS=false

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:81/auth/google/callback

# Frontend Configuration
BASE_FE_URL=http://localhost:3000

# Server Configuration
PORT=81

# LocalStack Configuration (for local development)
# Uncomment these for local testing:
# AWS_S3_ENDPOINT=http://localhost:4566
# AWS_ACCESS_KEY_ID=test
# AWS_SECRET_ACCESS_KEY=test
# AWS_S3_USE_SSL=false
